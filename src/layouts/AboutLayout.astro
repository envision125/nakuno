---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import '../styles/global.css';


---



<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <meta name="generator" content={Astro.generator} />
    <title>Home</title>
  </head>
  <body>
    <Header />
    <div class="content">
      <slot />
    </div>
    <Footer />
  </body>
  <!-- <script>
    import "../scripts/menu.js";
  </script> -->

  <style>
    html,
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      margin: 0;
      width: 100%;
      height: 100%;
    }
    .content {
      flex-grow: 1;
    }
  </style>

  <style>
    /* About Page Styles */
    .about-container {
      max-width: 900px;
      margin: 2rem auto;
      padding: 0 1rem;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
    }

    .about-container h1 {
      text-align: center;
      font-size: 2.5rem;
      margin-bottom: 1.5rem;
      color: #b50000;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    .about-container h2 {
      font-size: 1.8rem;
      margin-bottom: 0.75rem;
      color: #8b0000;
      border-bottom: 2px solid #b50000;
      padding-bottom: 0.3rem;
    }

    .about-container p {
      font-size: 1.1rem;
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }

    /* Pillars Section */

    .pillars {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 1.5rem;
      margin-top: 2rem;
    }

    .pillar-card {
      background-color: #f9f9f9;
      border: 2px solid #b50000;
      border-radius: 10px;
      padding: 1.5rem;
      box-shadow: 0 4px 8px rgba(181, 0, 0, 0.2);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .pillar-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 16px rgba(181, 0, 0, 0.4);
    }

    .pillar-card h3 {
      margin-top: 0;
      margin-bottom: 0.75rem;
      color: #b50000;
      font-size: 1.4rem;
      text-align: center;
      text-transform: uppercase;
      letter-spacing: 1.5px;
    }

    .pillar-card p {
      font-size: 1rem;
      color: #444;
      text-align: center;
    }
  </style>
</html>
