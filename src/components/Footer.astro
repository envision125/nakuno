---
import Social from "./Social.astro";
import astroLogo from "../assets/bg-nak.jpg";
---

<style>
  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 2rem;
    padding: 2rem 3rem;
    border-top: 14px solid #b60000;
    background: linear-gradient(135deg, #101010, #000000);
    box-shadow: 0 8px 20px rgba(181, 0, 0, 0.6);
    color: #fff;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    text-align: center;
  }
  .footer-logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 12px 20px;
    border-radius: 50% 20%;
    margin-bottom: 1.5rem;
    overflow: hidden;
    box-shadow: 0 0 15px rgba(181, 0, 0, 0.7);
    max-width: 150px;
    max-height: 150px;
  }
  .footer-logo img {
    width: 100%;
    height: auto;
    border-radius: 50% 20%;
    object-fit: cover;
  }
  .top-section {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    margin-bottom: 1.5rem;
  }
  .top-section h4 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #ff6666;
    margin: 0;
  }
  .top-section div {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.5rem;
  }
  .top-section p {
    margin: 0.5rem 0 0 0;
    font-size: 1.3rem;
    font-weight: 700;
    color: #ffffff;
    letter-spacing: 1.2px;
  }
  .top-section a {
    color: #fff;
    font-size: 1.1rem;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  .top-section a:hover {
    color: #ffb3b3;
  }
  .copyright {
    font-size: 1.1rem;
    color: #004C97;
    font-weight: 600;
    letter-spacing: 1.5px;
  }
</style>

<footer>
  <div class="footer-logo">
    <img src={astroLogo.src} alt="Footer Logo" />
  </div>
      <h4>Follow Us |</h4>

  <div class="top-section">
    <div>
      <Social platform="instagram" username="gcaa_nak" />
      <p class="subtitle">GACAA</p>
    </div>
    <div>
      <Social platform="instagram" username="sonomanak" />
      <p class="subtitle">Undergrads</p>
    </div>
  </div>
  <div class="copyright">
    <h4>Sonoma State University | EST. 92</h4>
  </div>
</footer>
