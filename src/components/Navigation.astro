---
import astroLogo from "../assets/logoicon.jpg";
---

<nav>
  <div class="logo">
    <a href="https://astro.build"
      ><img src={astroLogo.src} width="115" height="48" alt="GCAA Homepage" /></a
    >
  </div>
  <div class="nav-links">
    <a href="/">Home</a>
    <a href="/about/">About</a>
    <a href="/actives/">Active</a>
    <a href="/join/">Join</a>
    <a href="/events/">Events</a>
  </div>
</nav>

<style>
  nav{
  background-color: black;
  
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12px 20px;
}

/* Update .logo to flex-direction: column and align-items: center
Keep nav-links display: flex and justify-content: center on larger screens.
Remove any margin-left on nav-links. */

.nav-links {
  display: block;
  text-align: center;
  padding: 10px 0;
  color: white;
  text-decoration: none;
  font-size: 1.2rem;
  font-weight: bold;
  text-transform: uppercase;
  margin: 0;
}

.nav-links a {
  color: #eeeeee;
  text-decoration: none;
  font-weight: 600;
  font-size: 1rem;
  position: relative;
  padding-bottom: 4px;
  transition: color 0.3s ease;
  margin-bottom: 10px;
}
.nav-links a:last-child {
  margin-bottom: 0;
}
.nav-links a::after {
  content: "";
  position: absolute;
  width: 0%;
  height: 8px;
  bottom: 0;
  left: 0;
  background-color: #b50000;
  transition: width 0.3s ease;
}
.nav-links a:hover,
.nav-links a:focus {
  color: #b50000;
  outline: none;
}
.nav-links a:hover::after,
.nav-links a:focus::after {
  width: 100%;
}

.expanded {
  display: unset;
}

@media screen and (min-width: 636px) {
  .nav-links {
    margin-left: 0;
    display: flex;
    justify-content: center;
    position: static;
    width: auto;
    background: none;
  }

  .nav-links a {
    display: inline-block;
    padding: 15px 20px;
    margin: 0 50px;
  }

  .hamburger {
    display: none;
  }
}



@media screen and (min-width: 400px) {
  .nav-links {
    margin-left: 0;
    display: flex;
    justify-content: center;
    position: static;
    width: auto;
    background: none;
  }

  .nav-links a {
    display: inline-block;
    padding: 15px 20px;
    margin: 0 2px;
  }
}
</style>
