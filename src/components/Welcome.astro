    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Omega Tau Fraternity</title>
    <style>
      /* Reset */
      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      body {
        font-family: "Poppins", "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        /* background: linear-gradient(135deg, #161f28, #000000); */
        background: linear-gradient(135deg, #000000, #000000);
        color: #f5f5f5;
        line-height: 1.6;
      }
      a {
        color: #ffb800;
        text-decoration: none;
        transition: color 0.3s ease;
      }
      a:hover,
      a:focus {
        color: #ffa500;
        outline: none;
      }

      .hero {
        background: #f5f5dc;
        border-radius: 2px;
        padding: 60px 30px;
        text-align: center;
        box-shadow: 0 12px 30px rgba(255, 0, 0, 0.4);
        user-select: none;
      }
      .hero h1 {
        font-size: 3.5rem;
        font-weight: 900;
        color: #a52a2a;
        letter-spacing: 6px;
      }
      .hero p {
        font-size: 1.3rem;
        font-weight: 400;
        margin-bottom: 30px;
        color: #000000;
      }
	
      .btn-primary {
        background-color: #7b0505;
        color: #f9f9f1;
        padding: 16px 50px;
        font-weight: 700;
        font-size: 1.1rem;
        border: none;
        border-radius: 50px;
        cursor: pointer;
        box-shadow: 0 14px 40px rgba(103, 5, 2, 0.8);
        transition:
          background-color 0.3s ease,
          box-shadow 0.3s ease;
        user-select: none;
      }
      .btn-primary:hover,
      .btn-primary:focus {
        background-color: #000000;
        box-shadow: 0 18px 48px rgba(0, 0, 0, 0.9);
        outline: none;
        color: #a52a2a;
      }

      /* Values Section */
      #values h2 {
        font-size: 2.8rem;
        font-weight: 900;
        color: #a52a2a;
        margin-bottom: 30px;
        text-align: center;
        user-select: none;
       margin-top: 35px;
      }
      .values-list {
        display: flex;
        flex-wrap: wrap;
        gap: 25px;
        justify-content: center;
      }
      .value-item {
        background: #f5f5dc;
        border-radius: 8px;
        padding: 30px 24px;
        width: 180px;
        font-weight: 700;
        font-size: 1.1rem;
        color: #1c1c2c;
        user-select: none;
        transition:
          transform 0.3s ease,
          box-shadow 0.3s ease;
        cursor: default;
      }
      .value-item:hover,
      .value-item:focus {
        transform: translateY(-8px);
        box-shadow: 0 16px 40px rgba(255, 0, 0, 0.7);
        outline: none;
      }

