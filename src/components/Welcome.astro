  <body>
    <main>
      <section class="hero" role="region" aria-labelledby="hero-title">
        <h1 id="hero-title">Nu Alpha Kappa Fraternity</h1>
        <p><strong>GAMMA CHAPTER ALUMNI ASSOCIATION</strong></p>
        <button
          class="btn-primary"
          type="button"
          aria-label="Join Omega Tau Fraternity">Join GCAA!</button
        >
      </section>

      <section id="values" role="region" aria-labelledby="values-title">
        <h2 id="values-title">OUR PILARS</h2>
        <div class="values-list" role="list">
          <div
            class="value-item"
            tabindex="0"
            role="listitem"
            aria-label="Brotherhood"
          >
            Men of Mind
          </div>
          <div
            class="value-item"
            tabindex="0"
            role="listitem"
            aria-label="Leadership"
          >
            Men of Pride
          </div>
          <div
            class="value-item"
            tabindex="0"
            role="listitem"
            aria-label="Integrity"
          >
            Men of Culture
          </div>
        </div>
      </section>
      <br />
     
